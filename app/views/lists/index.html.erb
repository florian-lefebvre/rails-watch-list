<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container py-5 text-white">
    <h1>Rails Watch List</h1>
  </div>
</div>
<div class="mt-5 container">
  <div class="d-flex justify-content-between align-items-center">
  <h2>My lists</h2>
    <%= link_to "New list", new_list_path, class: "btn btn-success" %>
  </div>
  <% @lists.each do |list| %>
    <ul>
      <li><%= link_to "#{list.name} (#{list.movies.length} movies)", list_path(list) %></li>
    </ul>
  <% end %>
</div>
